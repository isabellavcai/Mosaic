<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context="com.example.isabellacai.mosaic.MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/BrowseHeader"
            android:textColor="#ffffff"
            android:id="@+id/browseText"
            android:textSize="50sp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="50dp"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
                <ImageView
                    android:layout_width="460dp"
                    android:layout_height="331dp"
                    android:src="@drawable/untitled"
                    android:scaleType="centerInside"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/title"
                    android:text="Untitled"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/artist"
                    android:text="Barry McGee"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:gravity="center_horizontal"/>
                <!--left stuff-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <!--right stuff-->
                <GridView
                    android:id="@+id/gridview"
                    android:background="#1e1e1e"
                    android:layout_width="match_parent"
                    android:layout_height="520dp"
                    android:numColumns="2"
                    android:verticalSpacing="0dp"
                    android:horizontalSpacing="0dp"
                    android:stretchMode="columnWidth"
                    android:gravity="center"
                    android:layout_margin="0dp" />

                <Button
                    android:text="@string/CreateButton"
                    android:background="#0dbbdd"
                    android:textSize="30sp"
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/createButton"
                    android:layout_weight="2"
                    android:layout_gravity="center_horizontal"
                    android:onClick="goToDetail"
                    android:layout_margin="10dp"
                    android:textAllCaps="true"
                    />
        </LinearLayout>

</LinearLayout>

</LinearLayout>
